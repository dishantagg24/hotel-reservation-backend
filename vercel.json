{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/.*",
            "dest": "/api/auth"
        },
        {
            "src": "/api/hotels/.*",
            "dest": "/api/hotels"
        },
        {
            "src": "/api/users/.*",
            "dest": "/api/users"
        },
        {
            "src": "/api/rooms/.*",
            "dest": "/api/rooms"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}