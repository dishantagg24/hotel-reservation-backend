{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "/api/auth/$1"
        },
        {
            "src": "/api/hotels/(.*)",
            "dest": "/api/hotels/$1"
        },
        {
            "src": "/api/users/(.*)",
            "dest": "/api/users/$1"
        },
        {
            "src": "/api/rooms/(.*)",
            "dest": "/api/rooms/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}