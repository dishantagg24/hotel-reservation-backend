{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth",
            "dest": "server.js"
        },
        {
            "src": "/api/hotels",
            "dest": "server.js"
        },
        {
            "src": "/api/users",
            "dest": "server.js"
        },
        {
            "src": "/api/rooms",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}